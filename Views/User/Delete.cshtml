@using GeocachingApp.ViewModels
@model AppUser

@{
    ViewData["Title"] = "Deleting user";
}

<h1>Do you want to delete this user ?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" id="Id" name="Id" asp-for="Id" />

    <div class="form-group">
        <label asp-for="UserName">Username: </label>
        <input asp-for="UserName" class="form-control-plaintext">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CachesFound">Caches found: </label>
        <input asp-for="CachesFound" class="form-control-plaintext"/>
        <span asp-validation-for="CachesFound" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CachesCreated">Caches created: </label>
        <input asp-for="CachesCreated" class="form-control-plaintext">
        <span asp-validation-for="CachesCreated" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City">City: </label>
        <input asp-for="City" class="form-control-plaintext">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country">Country: </label>
        <input asp-for="Country" class="form-control-plaintext">
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
</form>

<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id">
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>
